@model EFDataApp.Models.Operation
@{
    ViewBag.Title = "Удаление пользователя";
}

<div>
    <dl class="dl-horizontal">
        <dt>Выражение</dt>
        <dd>
            @Html.DisplayFor(model => model.Expression)
        </dd>

        <dt>Ответ</dt>
        <dd>
            @Html.DisplayFor(model => model.Result)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>